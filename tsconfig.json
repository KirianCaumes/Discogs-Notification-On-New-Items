{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Preserve",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src", "eslint.config.js", ".lintstagedrc.cjs", ".prettierrc.cjs", "cspell.config.cjs"]
}
